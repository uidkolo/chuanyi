page{
  background: #f5f5f5;
}
.tab{
  position: fixed;
  width: 100%;
  border-top: 1px solid #dcdcdc;
  height: 80rpx;
  background: #fff;
  display: flex;
  align-items: center;
  justify-content: space-around;
  font-size: 28rpx;
  color: #4d4d4d;
  padding: 0 30rpx;
}
.tab-item{
  height: 76rpx;
  line-height: 76rpx;
}
.tab-item.active{
  color: #FF8400;
  border-bottom: 4rpx solid #FF8400;
}

.list{
  padding-top: 100rpx;
}
.item{
  background: #fff;
  padding: 30rpx;
}
.item+.item{
  margin-top: 20rpx;
}
.info{
  display: flex;
  align-items: center;
}
.info-avatar{
  width: 64rpx;
  height: 64rpx;
  border-radius: 64rpx;
  margin-right: 20rpx;
}
.info-right{
  display: flex;
  flex-direction: column;
  height: 64rpx;
  justify-content: space-between;
}
.info-name{
  color: #333;
  font-size: 26rpx;
}
.info-date{
  font-size: 24rpx;
  color: #999999;
}
.content{
  margin-top: 20rpx;
  font-size: 26rpx;
  color: #666;
}
.content-name{
  color: #333;
  margin: 0 10rpx;
}
.from{
  display: flex;
  align-items: center;
  margin-top: 20rpx;
  background: #F2F2F2;
  padding: 20rpx;
}
.from-image-box{
  width: 110rpx;
  height: 110rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 20rpx;
}
.from-image-box{
  width: 110rpx;
  height: 110rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 20rpx;
  background: #fff;
}
.from-image{
  height: 100rpx;
  width: 78rpx;
}
.from-right{
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}
.from-name{
  font-size: 26rpx;
  color: #999999;
}
.from-content{
  color: #666;
  font-size: 28rpx;
  margin-top: 20rpx;
}
.show{
  background: #F2F2F2;
  padding: 20rpx;
  margin-top: 20rpx;
}
.show-content{
  font-size: 28rpx;
  color: #666;
}
.show-imgs{
  display: flex;
  align-items: center;
  margin-top: 20rpx;
}
.show-imgs-item{
  width: 166rpx;
  height: 166rpx;
  margin-right: 20rpx;
}
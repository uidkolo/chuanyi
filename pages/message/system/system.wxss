page{
  background: #F5F5F5;
}
.item{
  background: #fff;
  margin: 30rpx;
  border-radius: 8rpx;
  padding: 0 20rpx;
}
.item-title{
  font-size: 30rpx;
  color: #333;
  padding: 20rpx 0;
  text-align: justify;
}
.item-img{
  width: 100%;
  height: 280rpx;
}
.item-info{
  font-size: 28rpx;
  color: #999;
  padding: 20rpx 0;
  text-align: justify;
}
.item-nav{
  display: flex;
  align-items: center;
  justify-content: space-between;
  font-size: 28rpx;
  color: #666;
  padding: 20rpx 0;
  border-top: 1rpx solid rgba(0,0,0,0.1);
}
.item-nav-icon{
  width:14rpx;
  height: 24rpx;
}
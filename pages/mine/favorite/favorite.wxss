.picker{
  height: 90rpx;
  background: #fff;
  z-index: 9;
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  padding: 0 30rpx;
}
.picker picker .box{
  width: 246rpx;
  height: 70rpx;
  background: #f5f5f5;
  display: flex;
  align-items: center;
  font-size: 28rpx;
  color: #4D4D4D;
  border-radius: 10rpx;
  padding: 0 40rpx;
  justify-content: space-between;
}
.picker picker image{
  width: 32rpx;
  height: 32rpx;
}

.list{
  padding: 90rpx 30rpx 0;
}
.list .item{
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.list .item .img{
  width: 276rpx;
  height: 276rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  flex-shrink: 0;
  border: 1rpx solid #CCCCCC;
  margin-right: 20rpx;
}
.list .item .img image{
  width: 250rpx;
  height: 250rpx;
}
.list .item .right{
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  height: 330rpx;
  padding: 30rpx 0;
  border-bottom: 1rpx solid #f5f5f5;
}
.list .item .right .name{
  font-size: 28rpx;
  color: #333333;
}
.list .item .right .price{
  color: #D6000F;
  font-size: 36rpx;
}
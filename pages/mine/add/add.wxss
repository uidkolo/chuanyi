page{
  background: #f5f5f5;
  padding-bottom: 40rpx;
}
.list{
  border-top: 1rpx solid #dcdcdc;
  min-height: 400rpx;
}
.list .item{
  background: #fff;
}
.list .item+.item{
  margin-top: 20rpx;
}
.list .item .top{
  padding: 30rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.list .item .top .name{
  font-size: 36rpx;
}
.list .item .top .phone{
  font-size: 32rpx;
}
.list .item .add{
  font-size: 24rpx;
  color: #4d4d4d;
  padding: 0 30rpx 30rpx;
  border-bottom: 1rpx solid #f5f5f5;
}
.list .item .bottom{
  padding: 0 30rpx;
  height: 90rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  font-size: 28rpx;
  color: #4d4d4d;
}
.list .item .bottom .radio{
  display: flex;
  align-items: center;
}
.list .item .bottom .radio .icon{
  height: 36rpx;
  width: 36rpx;
  border-radius: 36rpx;
  border: 1rpx solid #999;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 10rpx;
}
.list .item .bottom .radio .icon.active{
  background: #F7C900;
  border: 1rpx solid #F7C900;
}
.list .item .bottom .radio .icon image{
  height: 30rpx;
  width: 30rpx;
}
.list .item .bottom .btns text{
  margin-left: 40rpx;
}

.btn{
  background: #F7C900;
  border-radius: 10rpx;
  height: 92rpx;
  margin: 40rpx 30rpx 0;
  text-align: center;
  line-height: 92rpx;
  color: #1a1a1a;
  font-size: 30rpx;
}
.btn-wechat{
  border-radius: 10rpx;
  height: 92rpx;
  margin: 40rpx 30rpx 0;
  text-align: center;
  line-height: 92rpx;
  color: #1a1a1a;
  font-size: 30rpx;
  background: none;
  border: 1px solid #F7C900;
}

.mask{
  display: flex;
  align-items: center;
  justify-content: center;
}
.add-from{
  background: #fff;
  border-radius: 8rpx;
  width: 690rpx;
  padding: 40rpx 30rpx;
}
.add-form-item{
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 20rpx;
}
.add-label{
  color: #666666;
  font-size: 28rpx;
  flex-shrink: 0;
  width: 160rpx;
}
.add-label text{
  color: #F7C900;
}
.add-content{
  height: 80rpx;
  border: 1px solid #CCCCCC;
  flex-grow: 1;
  display: flex;
  align-items: center;
  justify-content: space-between;
  font-size: 28rpx;
  color: #333333;
  border-radius: 4rpx;
  width: 100%;
}
.add-content-value{
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  flex-grow: 1;
}
.add-input{
  height: 80rpx;
  flex-grow: 1;
  padding: 0 20rpx;
}
.add-picker{
  width: 235rpx;
  flex-grow: 1;
  height: 80rpx;
}
.add-picker-icon{
  width: 30rpx;
  height: 30rpx;
  flex-shrink: 0;
}
.add-picker-box{
  padding: 0 20rpx;
}

.add-form-textarea{
  align-items: flex-start;
}
.add-textarea-box{
  height: 170rpx;
  padding: 20rpx;
}
.add-textarea{
  height: 130rpx;
  width: 100%;
}
.add-btns{
  display: flex;
  align-items: center;
  justify-content: flex-end;
  font-size: 30rpx;
  color: #1A1A1A;
}
.cancel, .save{
  height: 70rpx;
  width: 160rpx;
  line-height: 70rpx;
  text-align: center;
}
.save{
  background: #F7C900;
  border-radius: 4rpx;
}
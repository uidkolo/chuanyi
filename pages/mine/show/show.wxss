page{
  background: #f5f5f5;
}
.picker{
  background: #f5f5f5;
  z-index: 9;
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  padding: 30rpx;
}
.picker picker .box{
  width: 246rpx;
  height: 70rpx;
  background: #fff;
  display: flex;
  align-items: center;
  font-size: 28rpx;
  color: #4D4D4D;
  border-radius: 10rpx;
  padding: 0 40rpx;
  justify-content: space-between;
}
.picker picker image{
  width: 32rpx;
  height: 32rpx;
}

.list{
  padding-top: 130rpx;
}
.list .item{
  padding: 30rpx;
  background: #fff;
}
.list .item+.item{
  margin-top: 20rpx;
}
.list .item .top{
  display: flex;
  align-items: center;
  font-size: 28rpx;
  color: #1A1A1A;
}
.list .item .top .avatar{
  width: 44rpx;
  height: 44rpx;
  border-radius: 44rpx;
  margin-right: 10rpx;
}
.list .item .info{
  display: flex;
  align-items: center;
  font-size: 24rpx;
  color: #B3B3B3;
  margin-top: 20rpx;
}
.list .item .info text{
  margin-right: 20rpx;
}
.list .item .content{
  font-size: 28rpx;
  color: #4D4D4D;
  margin-top: 20rpx;
}
.list .item .imgs{
  display: flex;
  align-items: center;
  margin-top: 20rpx;
}
.list .item .imgs image{
  width: 166rpx;
  height: 166rpx;
  border: 1rpx solid #DDDDDD;
}
.list .item .imgs image+image{
  margin-left: 10rpx;
}
.list .item .bottom{
  margin-top: 20rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  font-size: 24rpx;
  color: #808080;
}
.list .item .bottom .right{
  display: flex;
  align-items: center;
  font-size: 20rpx;
}
.list .item .bottom .right .right-item{
  display: flex;
  align-items: center;
  border: 1rpx solid #CCCCCC;
  height: 36rpx;
  line-height: 36rpx;
  border-radius:36rpx;
  padding: 0 10rpx;
  margin-left: 10rpx;
}
.list .item .bottom .right image{
  width: 22rpx;
  height: 22rpx;
  margin-right: 5rpx;
}
page{
  background: #f5f5f5;
}
.container{
  margin-top: 20rpx;
  padding-left: 30rpx;
  background: #fff;
}
.item{
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 20rpx 30rpx 20rpx 0;
}
.item+.item{
  border-top: 1px solid rgba(0,0,0,0.1);
}
.label{
  font-size: 30rpx;
  color: #333;
}
.value{
  display: flex;
  align-items: center;
  font-size: 30rpx;
  color: #999;
}
.icon{
  width:14rpx;
  height: 24rpx; 
  margin-left: 20rpx;
}
.avatar{
  width: 66rpx;
  height: 66rpx;
  border-radius: 66rpx;
}

.shade{
  background: #fff;
  padding: 0 30rpx;
  border-radius: 8rpx;
}
.shade-title{
  padding: 20rpx 0;
  font-size: 32rpx;
  color: #1a1a1a;
  text-align: center;
}
.shade-content{
  padding: 50rpx 0;
}
.shade-content-item{
  width: 630rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.shade-content-item+.shade-content-item{
  margin-top: 30rpx;
}
.shade-input{
  flex-grow: 1;
  border: 1px solid #CCCCCC;
  height: 72rpx;
  border-radius: 8rpx;
  font-size: 28rpx;
  padding: 0 20rpx;
}
.shade-content-item-btn{
  width: 190rpx;
  height: 72rpx;
  border: 1px solid #CCCCCC;
  font-size: 28rpx;
  color: #1A1A1A;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-left: 20rpx;
  border-radius: 8rpx;
}
.shade-btns{
  display: flex;
  align-items: center;
  justify-content: flex-end;
  padding-bottom: 30rpx;
}
.shade-btn-cancel{
  width: 160rpx;
  height: 70rpx;
  text-align: center;
  line-height: 70rpx;
  color: #4D4D4D;
  font-size: 30rpx;
}
.shade-btn-confirm{
  width: 160rpx;
  height: 70rpx;
  text-align: center;
  line-height: 70rpx;
  font-size: 30rpx;
  color: #1A1A1A;
  background: #F7C900;
  border-radius: 8rpx;
}
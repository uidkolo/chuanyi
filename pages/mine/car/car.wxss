page{
  background: #F5F5F5;
}
.total{
  background: #F8DB16;
  height: 180rpx;
  padding: 0 30rpx;
  color: #1A1A1A;
  font-size: 28rpx;
  line-height: 80rpx;
}
.list{
  padding: 0 30rpx;
  margin-top: -100rpx;
}
.list .item{
  background: #fff;
  padding: 30rpx;
  border-radius: 8rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.list .item+.item{
  margin-top: 30rpx;
}
.list .item .item-left{
  display: flex;
  align-items: center;
}
.list .item .img{
  width: 109rpx;
  height: 140rpx;
  flex-shrink: 0;
  margin: 0 40rpx 0 20rpx;
}
.list .item .icon{
  width: 22rpx;
  height: 26rpx;
  flex-shrink: 0;
  margin-left: 20rpx;
  position: relative;
  top: 4rpx;
}
.list .item .right{
  flex-grow: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  min-height: 180rpx;
}
.list .item .right .top{
  display: flex;
  justify-content: space-between;
  font-size: 26rpx;
  color: #4D4D4D;
}
.list .item .item-name{
  text-align: justify;
}
.list .item .right .info{
  display: flex;
  align-items: center;
  font-size: 24rpx;
  color: #B3B3B3;
}
.list .item .right .info text{
  margin-right: 10rpx;
}
.list .item .right .bottom{
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.list .item .right .bottom .price{
  font-size: 36rpx;
  color: #D6000F;
}
.list .item .right .bottom .num{
  display: flex;
  align-items: center;
  font-size: 40rpx;
  color: #1a1a1a;
}
.list .item .right .num-btn{
  width: 50rpx;
  height: 50rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}
.list .item .right .bottom .num image{
  width: 20rpx;
  height: 20rpx;
}
.list .item .right .bottom .num .value{
  background: #f5f5f5;
  height:50rpx;
  width: 80rpx;
  font-size: 26rpx;
  line-height: 50rpx;
  text-align: center;
}

.count-box{
  height: 130rpx;
  margin-top: 40rpx;
}
.count{
  height: 130rpx;
  background: #fff;
  position: fixed;
  bottom: 0;
  width: 100%;
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 0 30rpx;
}
.count .left{
  display: flex;
  align-items: center;
  font-size: 28rpx;
  color: #666;
}
.count .left .price{
  margin-left: 20rpx;
  color: #1A1A1A;
  display: flex;
  align-items: center;
}
.count .left .price .num{
  color: #D6000F;
  font-size: 48rpx;
}
.count .right{
  color: #1a1a1a;
  font-size: 28rpx;
  background: #F7C900;
  text-align: center;
  line-height: 90rpx;
  height: 90rpx;
  width: 180rpx;
  border-radius: 6rpx;
}

.null{
  padding: 100rpx 0;
  display: flex;
  flex-direction: column;
  align-items: center;
}
.null-icon{
  height: 100rpx;
  width: 128rpx;
}
.null-tip{
  font-size: 24rpx;
  color: #999;
  margin-top: 30rpx;
  text-align: center;
}
.null-btn{
  width: 240rpx;
  height: 90rpx;
  border: 1px solid #E5BF00;
  font-size: 28rpx;
  line-height: 90rpx;
  text-align: center;
  color: #E5BF00;
  border-radius: 8rpx;
  margin-top: 80rpx;
}
page{
  background: #f5f5f5;
}
.user-box{
  height: 198rpx;
}
.user{
  position: fixed;
  width: 100%;
  top: 0;
  left: 0;
  z-index: 2;
  padding: 40rpx 30rpx;
  background: linear-gradient(#FFA340,#FF8400);
  display: flex;
  align-items: center;
}
.user-right{
  height: 100rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}
.avatar{
  width: 128rpx;
  height: 128rpx;
  border-radius: 128rpx;
  margin-right: 20rpx;
  flex-shrink: 0;
}
.user-name{
  font-size: 32rpx;
  color: #fff;
  display: flex;
  align-items: center;
}
.user-num{
  font-size: 26rpx;
  color: rgba(255,255,255,0.7);
  display: flex;
  align-items: center;
}
.user-num-line{
  width: 1rpx;
  height: 20rpx;
  display: block;
  background: rgba(255,255,255,0.7);
  margin: 0 20rpx;
}


.list{
  padding: 0 30rpx;
}
.list .item{
  background: #fff;
  margin-top: 30rpx;
  border-radius: 8rpx;
  padding: 30rpx;
}
.list .item .imgs{
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-top: 20rpx;
}
.list .item .imgs .img{
  width: 300rpx;
  height: 300rpx;
  border: 1rpx solid #DDDDDD;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 20rpx;
  position: relative;
}
.list .item .imgs .img image{
  width: 200rpx;
  height: 256rpx;
}
.list .item .imgs .img .icon{
  position: absolute;
  left: 0;
  top: 0;
  font-size: 20rpx;
  color: #fff;
}
.list .item .imgs .img .icon text{
  position: absolute;
  left: 4rpx;
  top: -40rpx;
  line-height: 1;
}
.list .item .front .icon{
  border-top:44rpx solid #F7C900;
  border-right:44rpx solid transparent;
}
.list .item .back .icon{
  border-top:44rpx solid #DDDDDD;
  border-right:44rpx solid transparent;
}
.item .info{
  margin-top: 30rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.item .info .left{
  color: #B3B3B3;
  font-size: 24rpx;
  flex-shrink: 0;
  display: flex;
  align-items: center;
}
.left-btn{
  margin-left: 20rpx;
}
.item .info .left .left-item{
  margin-right: 10rpx;
}
.item .info .share{
  color: #808080;
  font-size: 20rpx;
  height: 36rpx;
  border-radius: 36rpx;
  width: 100rpx;
  text-align: center;
  display: flex;
  align-items: center;
  justify-content: center;
  border: 1rpx solid #CCCCCC;
}
.item .info .right{
  display: flex;
  align-items: center;
}
.item .info .right-item{
  width: 100rpx;
  height: 36rpx;
  border: 1px solid #ccc;
  background: #fff;
  border-radius: 36rpx;
  color: #808080;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 20rpx;
  margin-left: 20rpx;
}

.tab-box{
  height: 76rpx;
}
.tab{
  position: fixed;
  width: 100%;
  top: 198rpx;
  left: 0;
  z-index: 2;
  background: #FF8400;
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.tab-item{
  background: rgba(255,255,225,0.5);
  border-radius: 8rpx 8rpx 0 0;
  color: #fff;
  font-size: 28rpx;
  text-align: center;
  width: 247rpx;
  height: 80rpx;
  line-height: 80rpx;
}
.tab-item.active{
  background: #F5F5F5;
  color: #1A1A1A;
}

.sub-tab-box{
  height: 74rpx;
}
.sub-tab{
  position: fixed;
  top: 274rpx;
  left: 0;
  width: 100%;
  padding: 30rpx 30rpx 10rpx;
  display: flex;
  z-index: 2;
  align-items: center;
  background: #f5f5f5;
}
.sub-tab-item{
  width: 100rpx;
  height: 40rpx;
  border-radius: 40rpx;
  text-align: center;
  line-height: 40rpx;
  color: #666666;
  font-size: 20rpx;
  background: #fff;
  margin-right: 20rpx;
}
.sub-tab-item.active{
  background: #F7C900;
  color: #1A1A1A;
}

.item-top{
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.item-top-left{
  display: flex;
  align-items: center;
  font-size: 24rpx;
  position: relative;
}
.item-top-price{
  color: #D6000F;
  margin-right: 20rpx;
  min-width: 100rpx;
  text-align: center;
}
.item-top-price-btn{
  width: 24rpx;
  height: 24rpx;
}
.item-top-btn{
  width: 100rpx;
  height: 36rpx;
  border: 1px solid #ccc;
  background: #fff;
  border-radius: 36rpx;
  color: #808080;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 20rpx;
  margin-left: 20rpx;
}
.item .info .right{
  display: flex;
  align-items: center;
}
.item .info .right .right-type-3{
  font-size: 20rpx;
  color: #CCCCCC;
}
.item .info .right .right-type-2{
  font-size: 20rpx;
  color: #FF8400;
}
.item .info .right-num-item{
  display: flex;
  align-items: center;
  font-size: 20rpx;
  color: #B3B3B3;
  margin-left: 20rpx;
}
.right-item-icon{
  width: 30rpx;
  height: 30rpx;
  margin-right: 10rpx;
}

.earn{
  padding: 30rpx;
}
.earn-month{
  background: #fff;
  border-radius: 8rpx;
}
.earn-month-top{
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 30rpx 0;
  color: #333333;
  font-size: 26rpx;
}
.earn-month-top-num{
  font-size: 48rpx;
  color: #F7C900;
  margin-top: 10rpx;
}
.earn-month-top-tip{
  width: 250rpx;
  height: 30rpx;
  line-height: 30rpx;
  text-align: center;
  background: #F5F3E6;
  font-size: 18rpx;
  color: #B3B0A1;
  margin-top: 10rpx;
}
.earn-month-bottom{
  display: flex;
  align-items: center;
  justify-content: space-around;
  padding: 30rpx 0;
}
.earn-month-bottom-item{
  width: 33.33%;
  flex-grow: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}
.earn-label{
  color: #999999;
  font-size: 24rpx;
}
.earn-value{
  font-size: 30rpx;
  color: #333333;
  margin-top: 10rpx;
}

.earn-detail{
  border-radius: 8rpx;
  margin-top: 30rpx;
  background: #fff;
  padding: 30rpx;
  display: flex;
  justify-content: space-around;
}
.earn-detail-item{
  display: flex;
  align-items: center;
  flex-direction: column;
}
.earn-detail-item-top{
  display: flex;
  flex-direction: column;
  align-items: center;
}
.earn-detail-btn{
  width: 140rpx;
  height: 56rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border: 1px solid #CCCCCC;
  border-radius: 8rpx;
  color: #333333;
  font-size: 24rpx;
  margin-top: 20rpx;
}

.order{
  background: #fff;
  border-radius: 8rpx;
  margin-top: 30rpx;
}
.order .more{
  display: flex;
  justify-content: space-between;
  align-items: center;
  height: 78rpx;
  padding: 0 30rpx;
  color: #1A1A1A;
  font-size: 30rpx;
  border-bottom: 1rpx solid rgba(0,0,0,0.1);
}
.order .more .icon{
  width: 14rpx;
  height: 24rpx;
}
.order .box{
  display: flex;
  align-items: center;
  padding: 30rpx;
  justify-content: space-between;
}
.order .box .item{
  font-size: 24rpx;
  color: #666;
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 20%;
  position: relative;
}
.order .box .item .num{
  position: absolute;
  top: -10rpx;
  right: 0;
  font-size: 20rpx;
  color: #F7B200;
  height: 28rpx;
  line-height: 28rpx;
  border-radius: 28rpx;
  padding: 0 10rpx;
  border: 1rpx solid #F7B200;
}
.order .box .icon{
  width: 50rpx;
  height: 50rpx;
  margin-bottom: 10rpx;
}

.design-box{
  height: 180rpx;

}
.design{
  position: fixed;
  right: 30rpx;
  bottom: 90rpx;
  width: 90rpx;
  height: 90rpx;
  background: #FF8400;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 90rpx;
  z-index: 999;
}
.design-icon{
  width: 38rpx;
  height: 38rpx;
}
.post{
  width: 600rpx;
  background: #fff;
  border-radius: 8rpx;
  padding: 30rpx;
  position: relative;
}
.post-input{
  border: 1px solid #DDDDDD;
  font-size: 24rpx;
  padding: 0 20rpx;
  height: 80rpx;
}
.post-close{
  position: absolute;
  bottom: -60px;
  left: 50%;
  margin-left: -20px;
}
.post-btn{
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  border-radius: 8rpx;
  margin-top: 30rpx;
  background: #F7C900;
  font-size: 32rpx;
  color: #1A1A1A;
}
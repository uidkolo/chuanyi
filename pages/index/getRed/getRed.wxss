page{
  height: 100%;
}
.page{
  padding-top: 30rpx;
  padding-bottom: 30rpx;
  background: linear-gradient(#F5C463,#E5A04B);
  display: flex;
  align-items: center;
  justify-content: center;
  min-height: 100%;
  flex-direction: column;
}
.red{
  width: 690rpx;
  margin: 0 auto;
  position: relative;
  padding: 0 30rpx ;
}
.red-content{
  background: linear-gradient(#f3dfc1,#e4ba87);
  padding: 30rpx;
  position: relative;
  z-index: 2;
  padding-bottom: 200rpx;
}
.red-info{
  background: #fff;
  border-radius: 8rpx;
  padding: 30rpx;
}
.red-info-title{
  font-size: 36rpx;
  color: #333333;
  text-align: center;
}
.red-info-num{
  text-align: center;
  font-size: 24rpx;
  color: #333;
  margin-top: 20rpx;
}
.red-info-num-value{
  color: #E30613;
  font-size: 60rpx;
  font-weight: bold;
  margin-right: 10rpx;
}
.red-info-time{
  font-size: 24rpx;
  color: #999;
  text-align: center;
  margin-top: 20rpx;
}
.red-btn{
  height: 92rpx;
  background: linear-gradient(#F8DB16,#F7C900);
  border-bottom: 4rpx solid #B39202;
  border-radius: 8rpx;
  margin-top: 30rpx;
  line-height: 85rpx;
  text-align: center;
  color: #1A1A1A;
  font-size: 36rpx;
}
.red-bg-01{
  width: 690rpx;
  height: 484rpx;
  position: absolute;
  bottom: 200rpx;
  left: 0;
}
.red-bg-02{
  width: 690rpx;
  height: 212rpx;
  position: absolute;
  bottom: 0;
  left: 0;
  z-index: 4;
}
.red-user{
  margin-top: 30rpx;
  border-top: 1px dotted #d6ac77;
  padding: 20rpx 30rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.red-user-item{
  display: flex;
  flex-direction: column;
  align-items: center;
  font-size: 20rpx;
  color: #fff;
}
.red-user-item-avatar{
  width: 80rpx;
  height: 80rpx;
  border-radius: 80rpx;
  background: #fff;
}
.red-tip{
  color: #CC4129;
  font-size: 40rpx;
  position: absolute;
  bottom: 50rpx;
  left: 0;
  width: 100%;
  text-align: center;
  z-index: 9;
}
.slogan{
  margin-top: 30rpx;
  color: #824A00;
  font-size: 30rpx;
  display: flex;
  align-items: center;
  line-height: 1.8;
}
.slogan-line{
  height: 1px;
  width: 50rpx;
  background: rgba(0,0,0,0.1);
  margin: 0 20rpx;
}
.video{
  width: 690rpx;
  margin: 0 30rpx;
  display: flex;
  align-items: c;
  justify-content: center;
  background: rgba(0,0,0,0.1);
  padding: 50rpx 0;
}
video{
  margin: 0;
}
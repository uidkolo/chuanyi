.top{
  background: #f5f5f5;
  height: 620rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 0 30rpx;
}
.top-left .item{
  height: 100rpx;
  width: 60rpx;
  border-radius: 6rpx;
  background: #fff;
  color: #1a1a1a;
  font-size: 26rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  margin: 20rpx 0;
}
.top-left .item.active{
  background: #f8db16;
}

.top-center{
  width: 450rpx;
  height: 620rpx;
  padding: 20rpx 0 10rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  align-items: center;
}
.top-center .canvas-box{
  position: relative;
  width: 450rpx;
  height: 620rpx;
}
.top-center .canvas-box .img{
  width: 450rpx;
  height: 530rpx;
}
.top-center .shadow image{
  width: 450rpx;
  height: 60rpx;
}
.top-center .not-null{
  border: 1px solid #a5a5a5;
}
.top-center .canvas-box .canvas{
  position: absolute;
  top: 140rpx;
  left: 135rpx;
  width: 180rpx;
  height: 240rpx;
}


.top-right .item{
  display: block;
  width: 60rpx;
  height: 60rpx;
  border-radius: 60rpx;
  border: 1rpx solid #fff;
  margin: 20rpx 0;
}
.top-right .item.red{
  background: red;
}
.top-right .item.white{
  background: white;
}
.top-right .item.black{
  background: black;
}
.top-right .item.blue{
  background: blue;
}

.center{
  height: 250rpx;
  padding: 30rpx 0;
  border-bottom: 1rpx solid #dcdcdc;
}

.direction{
  display: flex;
  justify-content: center;
  align-items: center;
  height: 54rpx;
}
.direction .item{
  width: 100rpx;
  height: 50rpx;
  font-size: 26rpx;
  color: #999999;
  line-height: 50rpx;
  text-align: center;
  border: 2rpx solid #dcdcdc;
}
.direction .item.active{
  background: #e6e6e6;
  color: #666666;
}
.direction .item.front{
  border-right: none;
  border-radius: 6rpx 0 0 6rpx;
}
.direction .item.back{
  border-radius: 0 6rpx 6rpx 0;
}

.style{
  margin-top: 30rpx;
  white-space: nowrap;
  text-align: center;
  height: 106rpx;
}
.style .item{
  width: 90rpx;
  height: 106rpx;
  display: inline-block;
  margin: 0 30rpx;
}

.bottom{
  padding-bottom: 30rpx;
}
.bottom .select{
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 40rpx;
}
.bottom .select .item{
  height: 56rpx;
  width: 160rpx;
  border-radius: 10rpx;
  color: #333333;
  font-size: 26rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border: 1px solid #dcdcdc;
  line-height: 1;
}
.bottom .select .item .icon{
  width: 30rpx;
  height: 30rpx;
  margin-right: 10rpx;
} 
.bottom .select .check-fodder .icon{
  margin-right: 0;
}

.bottom .fodder-default{
  height: 114rpx;
  white-space:nowrap;
}
.bottom .fodder-default .item{
  width: 106rpx;
  height: 106rpx;
  border: 1px solid #CCCCCC;
  margin-right: 30rpx;
  display: inline-block;
}
.bottom .fodder-default .item:first-child{
  margin-left: 40rpx;
}
.bottom .fodder-default .item:last-child{
  margin-right: 40rpx;
}

.fodder-box{
  padding: 40rpx;
}
.fodder-box .fodder-header{
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.fodder-box .fodder-header .item{
  height: 56rpx;
  width: 160rpx;
  border-radius: 10rpx;
  color: #333333;
  font-size: 26rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border: 1px solid #dcdcdc;
  line-height: 1;
}
.fodder-box .fodder-header .item .icon{
  width: 30rpx;
  height: 30rpx;
  margin-right: 10rpx;
}
.fodder-box .fodder-header .item:first-child .icon{
  margin-right: 0;
}
.fodder-box .fodder-list{
  display: flex;
  flex-wrap: wrap;
  margin-top: 30rpx;
}
.fodder-box .fodder-list .item{
  width: 106rpx;
  height: 106rpx;
  margin-right:  30rpx;
  display: block;
  border: 1px solid #dcdcdc;
  margin-bottom: 30rpx;
}
.fodder-box .item:nth-child(5n){
  margin-right: 0;
}

.bottom .btn{
  height: 92rpx;
  background: #f7c900;
  color: #1a1a1a;
  font-size: 36rpx;
  line-height: 92rpx;
  text-align: center;
  border-radius: 8rpx;
  margin: 40rpx 40rpx 0;
}

.fodder-edit .edit .item{
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.fodder-edit .edit .item slider{
  flex-grow: 1;
  margin-right: 0;
}
.fodder-edit .edit .item .label{
  font-size: 30rpx;
  color: #333;
}
.fodder-edit .edit-bottom{
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 30rpx 0 0;
}
.fodder-edit .edit-bottom .item{
  width: 156rpx;
  height: 66rpx;
  border: 2rpx solid #ccc;
  text-align: center;
  line-height: 66rpx;
  border-radius: 6rpx;
  font-size: 30rpx;
  color: #4D4D4D;
}
.fodder-edit .edit-bottom .cancel{
  background: #F2F2F2;
  border: 2rpx solid #F2F2F2;
}
.fodder-edit .edit-bottom .confire{
  background: #F7C900;
  border: 2rpx solid #F7C900;
  color: #1A1A1A;
}
.table{
  padding: 30rpx;
}
.table .thead{
  height: 72rpx;
  background: #f5f3e6;
  display: flex;
  align-items: center;
  font-size: 24rpx;
  color: #1A1A1A;
}
.table .thead .item{
  height: 72rpx;
  width: 20%;
  text-align: center;
  display: flex;
  flex-direction: column;
  justify-content: center;
}
.size,.length,.bust,.height,.weight{
  width: 20%;
  flex-grow: 1;
  text-align: center;
}
.table .thead .item .unit{
  font-size: 20rpx;
  color: #999;
}

.tbody .item{
  height: 72rpx;
  display: flex;
  align-items: center;
  font-size: 28rpx;
  color: #808080;
}
.tbody .item:nth-child(even){
  background: #FAFAFA;
}

.tip{
  padding: 0 30rpx 30rpx;
}
.tip .title{
  font-size: 24rpx;
  color: #E5BF00;
}
.tip .content{
  font-size: 24rpx;
  color: #808080;
  margin-top: 10rpx;
}
page{
  background: #f5f5f5;
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  position: relative;
}
.tips-box{
  height: 70rpx;
  overflow: hidden; 
  position: absolute;
  z-index: 9;
  top: 30rpx;
  left: -500rpx;
}
.tops{
  display: flex;
  flex-direction: column;
}
.tips-item{
  z-index: 9;
  display: flex;
  align-items: center;
  height: 70rpx;
  padding: 10rpx;
  padding-right: 20rpx;
  border-radius: 70rpx;
  background: rgba(0,0,0,0.5);
  font-size: 26rpx;
  color: #fff;
  /* animation: fade 4s infinite; */
}
.tips-avatar{
  width: 56rpx;
  height: 56rpx;
  border-radius: 56rpx;
  margin-right: 20rpx;
}
.tips-name{
  margin-right: 20rpx;
}
@keyframes fade {
  0%{
    left: 30rpx;
  }
  50%{
    left: 30rpx;
  }
  75%{
    left: -500rpx;
  }
  100%{
    left: 30rpx;
  }
}


.container{
  width: 100%;
}
.swiper{
  height: 920rpx;
  margin: 50rpx auto 0;
}
swiper-item{
  width: 640rpx;
}
swiper-item.active{
  z-index: 2;
}
.swiper .item{
  margin: 0 auto;
  width: 600rpx;
  height: 860rpx;
  background: #fff;
  border-radius: 8rpx;
  box-shadow: 0 10rpx 20rpx 0 rgba(128,128,128,0.2);
  padding-top: 30rpx;
  transition: all 1s;
  transform: scale(0.9,0.9);
}
.swiper .item.active{
  transform: scale(1,1);
}
.swiper .item image{
  width: 540rpx;
  display: block;
  height: 700rpx;
  margin: 0 auto;
}
.swiper .item .title{
  font-size: 26rpx;
  color: #999999;
  margin-top: 40rpx;
  text-align: center;
  padding: 0 30rpx;
}

.btn-box{
  padding: 30rpx 0;
}
.btn-box .btn{
  height: 92rpx;
  width: 680rpx;
  background: #f7c900;
  color: #1a1a1a;
  font-size: 36rpx;
  line-height: 92rpx;
  text-align: center;
  border-radius: 8rpx;
  margin: 0 auto;
}

.service{
  width: 90rpx;
  height: 90rpx;
  border-radius: 90rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background: rgba(248,219,22,0.7);
  position: fixed;
  right: 30rpx;
  bottom: 216rpx;
}
.service::after{
  border: none;
}
.service image{
  width: 44rpx;
  height: 44rpx;
  flex-shrink: 0;
}